{
    "preset": "psr12",
    "exclude": [
        "./app/sdks",
        "./tests/resources/functions",
        "./app/console"
    ],
    "rules": {
        "array_indentation": true,
        "single_import_per_statement": true,
        "simplified_null_return": true,
        "ordered_imports": {
            "sort_algorithm": "alpha",
            "imports_order": [
                "const",
                "class",
                "function"
            ]
        }
    }
}
